{% extends "base.html.twig" %}
{% block css %}
    <link href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css">
    {{ parent() }}

{% endblock %}
{% block body %}
    <div class="row">
        <!-- Page Heading -->
        <div class="col-lg-12">
            <h1 class="page-header">
                Crear Gimnastas <small>Agregar un nuevo gimnasta a la base</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> Panel Principal
                </li>
                <li>
                    <i class="fa fa-list"></i> Gimnastas
                </li>
                <li class="active">
                    <i class="fa fa-edit"></i> Crear
                </li>
            </ol>
        </div>

    </div>

    <form id="editGim" role="form">
        <input id="numero" type="hidden" name="id" value="{{ gimnasta.id }}">
        <div class="form-group">
            <label>Nombre</label>
            <input id="name" class="form-control" placeholder="Ingrese su nombre" value="{{ gimnasta.name }}">
        </div>

        <div class="form-group">
            <label>DNI</label>
            <input id="dni" class="form-control" placeholder="Ingrese su DNI" value="{{ gimnasta.dni }}">
        </div>

        <div class="form-group">
            <label>Email</label>
            <input id="email" class="form-control" placeholder="Ingrese su Email"  value="{{ gimnasta.email }}">
        </div>

        <button type="submit" class="btn btn-default btn-success">Editar</button>
    </form>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/gimnastas.js') }}"></script>
{% endblock %}