{% extends "base.html.twig" %}
{% block css %}
    <link href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css">
    {{ parent() }}

{% endblock %}
{% block body %}
    <div class="row">
        <!-- Page Heading -->
        <div class="col-lg-12">
            <h1 class="page-header">
                Crear Socio <small>Agregar un nuevo Socio a la base</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> Panel Principal
                </li>
                <li>
                    <i class="fa fa-list"></i> Socios
                </li>
                <li class="active">
                    <i class="fa fa-edit"></i> Crear
                </li>
            </ol>
        </div>

    </div>

    <form id="newGim" role="form">
        <div class="form-group">
            <label>Nombre</label>
            <input id="name" class="form-control" placeholder="Ingrese su nombre">
        </div>

        <div class="form-group">
            <label>DNI</label>
            <input id="dni" class="form-control" placeholder="Ingrese su DNI">
        </div>

        <div class="form-group">
            <label>Email</label>
            <input id="email" class="form-control" placeholder="Ingrese su Email">
        </div>

        <div class="form-group">
            <label>Dia de ingreso</label>
            <input id="beginDate" class="form-control" placeholder="Fecha de Ingreso" value="{{ "now"|date("d-m-Y") }}">
        </div>

        <div class="form-group">
            <label>Dia de Pago</label>
            <input id="payDate" class="form-control" placeholder="Fecha de Pago" value="{{ "now"|date("d-m-Y") }}">
        </div>


        <button type="submit" class="btn btn-default btn-success">Agregar</button>
        <button type="reset" class="btn btn-default btn-danger">Limpiar</button>
    </form>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/gimnastas.js') }}"></script>
{% endblock %}