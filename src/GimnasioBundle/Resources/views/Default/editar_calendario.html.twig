{% extends "base.html.twig" %}
{% block css %}
    <link href="https://cdn.datatables.net/1.10.12/css/dataTables.bootstrap.min.css" rel="stylesheet" type="text/css">
    {{ parent() }}

{% endblock %}
{% block body %}
    <div class="row">
        <!-- Page Heading -->
        <div class="col-lg-12">
            <h1 class="page-header">
                Editar Horario <small>Editar un horario a la base</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> Panel Principal
                </li>
                <li>
                    <i class="fa fa-list"></i> Socios
                </li>
                <li class="active">
                    <i class="fa fa-edit"></i> Crear
                </li>
            </ol>
        </div>

    </div>

    <form id="editarHorario" role="form">
        <input id="numero" type="hidden" name="id" value="{{ horario.id }}">
        <div class="form-group">
            <label>Horario</label>
            <input id="horario" class="form-control" placeholder="Ingrese el horario" value="{{ horario.horario }}">
        </div>

        <div class="form-group">
            <label>Lunes</label>
            <input id="lunes" class="form-control" placeholder="Ingrese Clase" value="{{ horario.lunes }}">
        </div>

        <div class="form-group">
            <label>Martes</label>
            <input id="martes" class="form-control" placeholder="Ingrese Clase" value="{{ horario.martes }}">
        </div>

        <div class="form-group">
            <label>Miercoles</label>
            <input id="miercoles" class="form-control" placeholder="Ingrese Clase" value="{{ horario.miercoles }}">
        </div>

        <div class="form-group">
            <label>Jueves</label>
            <input id="jueves" class="form-control" placeholder="Ingrese Clase" value="{{ horario.jueves }}">
        </div>

        <div class="form-group">
            <label>Viernes</label>
            <input id="viernes" class="form-control" placeholder="Ingrese Clase" value="{{ horario.viernes }}">
        </div>

        <div class="form-group">
            <label>Sabado</label>
            <input id="sabado" class="form-control" placeholder="Ingrese Clase" value="{{ horario.sabado }}">
        </div>


        <button type="submit" class="btn btn-default btn-success">Agregar</button>
        <button type="reset" class="btn btn-default btn-danger">Limpiar</button>
    </form>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/calendario.js') }}"></script>
{% endblock %}